FROM node:14.15.4

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm install

ARG DB_NAME
ARG DB_USERNAME
ARG DB_PASSWORD
ARG DB_URL
ARG DB_PORT

ENV DB_NAME $DB_NAME
ENV DB_USERNAME $DB_USERNAME
ENV DB_PASSWORD $DB_PASSWORD
ENV DB_URL $DB_URL
ENV DB_PORT $DB_PORT

COPY . .

EXPOSE 3003

CMD [ "node", "./src/server.js" ]
